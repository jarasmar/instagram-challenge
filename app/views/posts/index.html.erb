
<% @posts.each do |post| %>
  <div class="card text-center mx-auto mt-4" style="width: 30rem;">
    <% if post.image_url %>
      <%= image_tag post.image.url, class: "card-img-top", alt: "Card image cap" %>
    <% end %>

    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.text %></p>
      <p class='card-text'>Posted by <%= post.user.username %></p>
    </div>

    <div class="card-body">
      <%= link_to 'Show', post_path(post), class: "btn btn-outline-dark" %>
      <%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-dark" %>
      <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
