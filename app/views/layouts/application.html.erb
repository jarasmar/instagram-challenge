<!DOCTYPE html>
<html>
  <head>
    <title>JaraGram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- navigation bar -->
    <nav class="navbar fixed-top navbar-light bg-white">
      <a class="navbar-brand mb-0 h1" href='/posts'>
        <img src="https://cdn.pixabay.com/photo/2017/01/31/20/34/photo-camera-2027073_960_720.png" width="40" height="30" class="d-inline-block align-top" alt="">
        JaraGram
      </a>

      <%= link_to new_post_path do %>
        <button type="button" class="btn btn-outline-dark btn-lg navbar-center">
        New post</button>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
