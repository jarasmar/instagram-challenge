<!DOCTYPE html>
<html>
  <head>
    <title>JaraGram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <!-- navigation bar -->
    <nav>
      <p class="navbar-text float-right">
        <% if user_signed_in? %>
          <%= render "layouts/account_nav" %>
        <% else %>
          <%= render "layouts/public_nav" %>
        <% end %>
      </p>
    </nav>

      <!-- page content -->
    <div class='container'>
      <div class='row'>
        <div class="col-lg-12 text-center">
          
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
